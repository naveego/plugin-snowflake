{
  "id": "plugin-snowflake",
  "displayName": "Snowflake",
  "description": "Publisher which connects to Snowflake",
  "apiVersion": "2",
  "versionDescription": "Version 1",
  "version": "1.0.0",
  "iconFile": "icon.png",
  "executable": "PluginSnowflake",
  "kind": "publisher",
  "os": "$GOOS",
  "arch": "$GOARCH",
  "accessGroups": [],
  "canConfigure": true,
  "canProduceMultipleSchemas": true,
  "canAcceptQueryBasedSchemas": true,
  "canUseOAuth": false,
  "canConfigureWrite": false,
  "canWrite": false,
  "canConfigureReplication": true,
  "canWriteReplication": true,
  "querySchema": {
    "ui": {
      "ui:widget": "code",
      "ui:options": {
        "language": "sql"
      }
    },
    "schema": {
      "type": "string"
    }
  },
  "configSchema": {
    "ui": {
      "ui:order": [
        "Account",
        "Database",
        "Warehouse",
        "Username",
        "Password"
      ],
      "Password": {
        "ui:widget": "password"
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "Account" : {
          "type": "string",
          "title": "Account",
          "description": "The account of the Snowflake instance."
        },
        "Username": {
          "type": "string",
          "title": "Username",
          "description": "The username to use for authentication."
        },
        "Password": {
          "type": "string",
          "title": "Password",
          "description": "The password to use for authentication."
        },
        "Database": {
          "type": "string",
          "title": "Database",
          "description": "The database within the Snowflake instance."
        },
        "Warehouse": {
          "type": "string",
          "title": "Warehouse",
          "description": "The warehouse within the Snowflake instance."
        }
      },
      "required": [
        "Account",
        "Username",
        "Password",
        "Database",
        "Warehouse"
      ]
    }
  }
}